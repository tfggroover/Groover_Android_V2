<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/playlist_cell_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="3dp"
        android:layout_marginStart="4dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/playlist_cell_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/playlist_cell_image"
        app:layout_constraintTop_toTopOf="@id/playlist_cell_image"
        app:layout_constraintBottom_toBottomOf="@id/playlist_cell_image"
        app:layout_constraintEnd_toStartOf="@id/playlist_cell_details_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/prototype_regular"
        tools:text="Title" />

    <TextView
        android:id="@+id/playlist_cell_details_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Details"
        android:textColor="@color/black"
        android:fontFamily="@font/prototype_regular"
        app:layout_constraintStart_toEndOf="@id/playlist_cell_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/playlist_cell_image"
        app:layout_constraintBottom_toBottomOf="@id/playlist_cell_image"
        android:layout_marginRight="8dp"
        android:textSize="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
